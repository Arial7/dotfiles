#!/bin/sh

case $BLOCK_BUTTON in
	1) setsid "$TERMINAL" -e pulsemixer & ;;
	2) notifyd_running && notify-send -a 'Volume Module' \
		"Left click to open pulsemixer,
Right click to toggle mute,
Scroll to change volume"
		;;
	3) volume mute ;;
	4) volume up 5 ;;
	5) volume down 5 ;;
esac

# Print the speaker icon
echo -e "ï€¨  $(volume get)"
