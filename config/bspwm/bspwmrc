#!/usr/bin/env zsh

# setup PATH etc
source $HOME/.zshrc-light

sxhkd &
compton -b &
init_notifications && lemon-notify &
feh --bg-fill $HOME/.wallpaper.jpg &
xsetroot -cursor_name left_ptr &

bspc config border_width         1
bspc config window_gap          16

bspc config split_ratio          0.52
bspc config borderless_monocle   true
bspc config gapless_monocle      true
bspc config single_monocle       true
bspc config focus_follows_pointer true

bspc monitor -d ' Code' ' Web' '  Music' '  Trello' ' Slack' ' Game' ' Stuff'

bspc rule -a Google-chrome desktop='^2'
bspc rule -a \*:crx_ioljlgoncmlkbcepmminebblkddfjofl desktop='^3'
bspc rule -a \*:crx_jijnmpkkfkjaihbhffejemnpbbglahim desktop='^4'
bspc rule -a Slack desktop='^5'
bspc rule -a Steam desktop='^6'
bspc rule -a Gimp desktop='^7' state=floating follow=on

bspc config active_border_color \#f2777a
bspc config normal_border_color \#383838
bspc config focused_border_color \#f2777a
bspc config presel_feedback_color \#515151
